{
  "name": "mini-credit-service",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "build": "bun run prisma:generate && tsc -p tsconfig.json && bunx shx mkdir -p dist && bunx shx cp -r generated dist/generated",
    "start": "bun run build && bun dist/src/server.js",
    "seed:admin": "bun run src/seed/seed-admin.ts",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev --name init",
    "prisma:deploy": "bunx prisma migrate deploy",
    "prisma:studio": "bunx prisma studio",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-fileupload": "^1.5.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/otp-generator": "^4.0.2",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "auto-bind": "^5.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^8.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "otp-generator": "^4.0.1",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "zod": "^4.1.0"
  }
}