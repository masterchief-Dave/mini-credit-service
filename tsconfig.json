{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "bun-types"
    ]
  },
  "include": [
    "src",
    "prisma",
    "generated",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}